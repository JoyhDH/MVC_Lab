@model IEnumerable<Lab2_Construction.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Main menu</h2>

<p>
    @Html.ActionLink("Register new reader", "RegisterNewCard")
</p>

<p>
    @Html.ActionLink("Take a book", "ReceptionBook")
</p>

<p>
    @Html.ActionLink("Readers", "ReadersList")
</p>

<p>
    @Html.ActionLink("Search reader", "SearchReader")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Availabe)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availabe)
            </td>
        </tr>
    }

</table>
